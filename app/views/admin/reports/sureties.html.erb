<table class="table table-hover">
  <colgroup>
      <col style="width: 70%;">
      <col style="width: 30%;">
  </colgroup>
<thead>
  <tr>
    <th>Person</th>
    <th>Total</th>
  </tr>
</thead>
<tbody>
  <% @sureties.each do |surety_name, total_amount_posted| %>
    <tr>
      <td><%= link_to surety_name || '', admin_clients_path(surety_name: surety_name) %></td>
      <td><%= number_to_currency total_amount_posted %></td>
    </tr>
  <% end %>
</tbody>
</table>
